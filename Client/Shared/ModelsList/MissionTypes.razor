@page "/MissionTypes"
@layout AdminMenuLayout
@inject IMissionTypeService MissionTypeService

<div>
    @if (MissionTypeService.MissionTypes == null || MissionTypeService.MissionTypes.Count <= 0)
    {
        <p>@MissionTypeService.Message</p>
    }
    else
    {
        <table>
            <tr>
                <th>Тип</th>
            </tr>
            @for (int i = 0; i < MissionTypeService.MissionTypes.Count(); i++)
            {
                var mission = MissionTypeService.MissionTypes[i];
                <tr>
                    <td>@mission.Name</td>
                </tr>
            }

        </table>
    }
</div>

@code {

    private string Message { get; set; } = "Загрузка...";

    protected override async Task OnInitializedAsync()
    {
        await MissionTypeService.GetAll();
    }


}
